<%= form_for @restaurant, url: {action: "create"} do |f| %>
    <ul>
    <% @restaurant.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
    </ul>
    <p>
      <%= f.label :name %><br />
      <%= f.text_field :name %>
    </p>
    <p>
      <%= f.label :description %><br />
      <%= f.text_area :description %>
    </p>
    <p>
      <%= f.submit class: "button" %>
    </p>
  <% end %>
