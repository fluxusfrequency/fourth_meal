<tr>
  <td><%= restaurant.id %></td>

  <td><%= restaurant.name %></td>

  <td><%= restaurant.description[0..20] + "..." %></td>

  <td><%= restaurant.to_param %></td>

  <td><% restaurant.owners.each do |o| %>
        <%= o.full_name %>
      <% end %>
  </td>

  <td><%= restaurant.created_at.strftime('%m/%d/%Y') %></td>

  <td><%= restaurant.status %></td>

  <td><%= restaurant.active? %></td>

  <td><%= button_to "X", superman_approve_path(restaurant), {class: "btn btn-danger", :method => :approve} %></td>

  <% unless restaurant.rejected? %>
  <td><%= button_to "X", superman_reject_path(restaurant), {class: "btn btn-danger", :method => :reject} %></td>
  

  <td><%= button_to "X", superman_restaurant_path(restaurant), {class: "btn btn-danger", :method => :delete} %></td>

  <td><%= link_to "administer", admin_path(restaurant.to_param), {class: "btn btn-info"} %></td>
  <% end %>
</tr>