<section id="shop_more" class="grid-container" id="address-container">
  <ul>
    <% @addresses.each do |address| %>
      <div class="grid-30 address-panel">
        <li class="list">
          <%= address.first_name + " " + address.last_name %><br/>
          <%= address.street_address %><br/>
          <%= address.city + ", " + address.state %><br/>
          <%= address.zipcode %><br/>
          <%= address.email %><br/>    
          <%= link_to "Use This Billing Address", new_transaction_path(session[:current_restaurant], address_id: address.id), class: "button", id:"transaction-button" %>
        </li><br/><br/><br/>
      </div>
    <% end %>
  </ul>

  <br/>

  <div class="grid-100">

    <p>Enter a new address:</p>

  </div>

  <%= render "addresses/address_form" %>
</section>

