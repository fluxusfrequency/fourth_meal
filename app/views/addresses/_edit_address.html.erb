<div class="grid-50 address-panel">
  <li class="list">
    <%= address.first_name + " " + address.last_name %><br/>
    <%= address.street_address %><br/>
    <%= address.city + ", " + address.state %><br/>
    <%= address.zipcode %><br/>
    <%= address.email %><br/>
    <%= link_to "Edit Address", edit_address_path(address.id), class: "button" %>
    <%= link_to "Delete", address_path(address.id) , :confirm => "Are you sure?", :method=>:delete, class: "button" %>
  </li><br/><br/><br/>
</div>

