<header id="body-header" class="grid-container">

  <div class="grid-40" id="restaurant-logo">
    <h1 id="restaurant-title"><%= @restaurant.name %></h2><%# restaurant.logo_image image_tag 'logo-ono.gif', id:"logo-image" %>
    <h2><%= @restaurant.description %></h3>
  </div>

  <section id="other-products" class="grid-60">
    <%= link_to "Full Menu", menu_path(session[:current_restaurant]), class:"category #{'active' if @category.nil?}" %>
    <% @categories.each do |category| %>
      <%= link_to_category(category, session[:current_restaurant], @category) %>
    <% end %>

  </section>

</header>
