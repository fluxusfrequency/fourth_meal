<%= render 'header' %>

<section class="grid-container menu-view">
  <div class="grid-50">
    <% if current_order.items_in_cart? %>
      <%= render 'layouts/view_order_link' %>
    <% end %>
  </div>
  <div class="grid-50">
    <%= form_tag(items_path(session[:current_restaurant]), method: "get") do %>
      <p>
        <%= text_field_tag :query, params[:query] %>
        <%= submit_tag "Search", name: nil, class: "button" %>
      </p>
    <% end %>
  </div>

  <%= render @items %>
</section>
