<%= form_for @item, as: :item, url: items_path, html: { :multipart => true } do |f| %>
  <%= render "shared/errors", model: @item %>

  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>

  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>

  <p>
    <%= f.label :price %><br />
    <%= f.text_area :price %>
  </p>

  <p>
    <%= f.label :photo, "Attach a photo" %><br />
    <%= f.file_field :photo %>
  </p>

  <p>
    <%= f.submit %>
  </p>
<% end %>
