<div class="grid-container">
  <div class="grid-50">
    <h1>Log In</h1>

    <%= form_tag sessions_path, id:"login-form" do %>
      <p>
        <%= label_tag :email %><br />
        <%= text_field_tag :email, params[:email] %>
      </p>
      <p>
        <%= label_tag :password %><br />
        <%= password_field_tag :password %>
      </p>
      <p><%= submit_tag "Log In", class: "button" %></p>
    <% end %>

    <% if session[:current_restaurant] && current_order %>
      <br/>
      <h1>Checkout As A Guest</h1>
      <br/>
      <%= button_to "Checkout", guest_transaction_path(session[:current_restaurant]), :method => :get, class: "button" %>
    <% end %>
  </div>

  <div class="grid-50">
    <h1>Sign Up</h1>
    <%= render 'users/form', locals: { user: @user } %>
  </div>
</div>

<% content_for :title do %>
  Sign Up or Log In
<% end %>
