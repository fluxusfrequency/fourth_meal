<% cache @restaurant do %>
  <h1>Status: <%= @restaurant.active ? "Active" : "Offline" %></h1><br /> 
  <%= button_to (@restaurant.active ? "Take Offline" : "Activate"), 
  admin_restaurant_path(@restaurant, @restaurant.id), 
  {class: "btn btn-danger", id: "toggle_active_button", 
    :method => :delete} %> 
<% end %>
