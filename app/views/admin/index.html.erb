      <div id="page-wrapper">

        <div class="row">
          <div class="col-lg-12">
            <h1>All Orders <small>all orders in the system</small></h1>
            <ol class="breadcrumb">
              <li><i class="fa fa-dashboard"></i> Dashboard</li>
              <li><i class="fa fa-dashboard"></i> All Orders</li>
            </ol>
            
          </div>
        </div><!-- /.row -->

            <table class="table table-hover">
                <tr>
                    <th>Order #</th>

                    <th>Customer</th>

                    <th>Status</th>

                    <th>Order Total</th>
                    
                    <th>Order placed at</th>

                    <th>Delete</th>
                </tr>
                <% @orders.each do |order|  %>
                <tr>
                    <td><%= order.id %></td>

                    <td>
                      <% if order.user %>
                        <%= order.user.full_name %>
                      <% else %>
                        Customer has not logged in
                      <% end %>
                    </td>

                    <td><%= order.status %></td>

                    <td><%= number_to_currency(order_total(order.order_items)) %></td>
                    
                    <td><%= order.updated_at.strftime('%m/%d/%Y') %></td>

                    <td>
                        <%= button_to "delete", admin_order_path(order),:method => :delete %>
                    </td>
                </tr>
            <% end %>
        </table>

      </div><!-- /#page-wrapper -->

    </div><!-- /#wrapper -->

    <!-- Bootstrap core JavaScript -->
    <script src="//ajax.googleapis.com/ajax/libs/jquery/1.10.2/jquery.min.js"></script>
    <script src="js/bootstrap.js"></script>
  </body>
</html>
