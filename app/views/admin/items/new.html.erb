<div id="page-wrapper">

  <div class="row">
    <div class="col-lg-12">
      <h1>Create New Item <small>Create New Menu Item</small></h1>
      <ol class="breadcrumb">
        <li><i class="fa fa-dashboard"></i> Dashboard</li>
        <li><i class="fa fa-dashboard"></i> Create New Item</li>
      </ol>
      
    </div>
  </div><!-- /.row -->
  <%= form_for @item, url: {action: "create"} do |f| %>
    <ul>
    <% @item.errors.full_messages.each do |error| %>
      <li><%= error %></li>
    <% end %>
    </ul>
    <p>
      <%= f.label :title %><br />
      <%= f.text_field :title %>
    </p>
    <p>
      <%= f.label :description %><br />
      <%= f.text_area :description %>
    </p>
    <p>
      <%= f.label :price %><br />
      <%= f.text_field :price %>
    </p>
    <p> 
      <%= f.label :categories %>
      <%= f.select :categories, @categories %>
    </p>
    <p> 
      <%= f.label :retired %>
      <%= f.check_box :retired %>
    </p>
    <p>
      <%= f.submit class: "button" %>
    </p>
  <% end %>

</div><!-- /#page-wrapper -->