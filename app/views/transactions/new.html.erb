<div class="grid-container">


  <div class="grid-100" id="order-summary-container">
    <h1>Order Summary</h1>

    <table>
      <thead>
        <%= render partial: 'orders/order_item_table' %>
      </thead>

      <tbody>
        <%= render partial: 'orders/order_item', collection: current_order.order_items %>
      </tbody>
    </table>
  </div>


  <div class="grid-100" id="transaction-container">

    <h1>Transaction Information</h1>
    <h2>Checking out as <%= if current_user; current_user.full_name; else; "Guest"; end; %></h2>

    <%= render "transaction_form" if !current_user.transactions %>
    <%= render "user_transaction_form" if current_user  %>

  </div>
</div>
